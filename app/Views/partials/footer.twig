{% block footer %}
<section class="bg-primary">
    <div class="container grid grid-cols-2 py-5 md:flex md:justify-between md:flex-nowrap">
    {% for advantage in options.footer_advantages %}
        {% include 'components/iconTitle.twig' with {
            text: advantage.text,
            icon: advantage.icon,
        } %}
    {% endfor %}
    </div>
</section>

<footer class="bg-darkGray">
    <div class="container pt-7 pb-10 md:pt-14">
        <div class="grid grid-cols-1 md:grid-cols-3">
            <div class="mb-6">
                <h3 class="text-28 text-white mb-5 md:mb-10">Vše o nákupu</h3>
                <ul class="flex flex-col">
                    {% for item in footer_left.items %}
                    <li class="{{ item.class }} moving-link">
                        <a href="{{ item.url }}" class="py-1 flex">{{ item.name }}</a>
                        {{ svg('up-arrow' ) }}
                    </li>
                    {% endfor %}
                </ul>
            </div>
            <div class="mb-6">
                <h3 class="text-28 text-white mb-5 md:mb-10">Může tě zajímat</h3>
                <ul class="flex flex-col">
                    {% for item in footer_right.items %}
                    <li class="{{ item.class }} moving-link">
                        <a href="{{ item.url }}" class="py-1 flex">{{ item.name }}</a>
                        {{ svg('up-arrow' ) }}
                    </li>
                    {% endfor %}
                </ul>
            </div>
            <div>
                <h3 class="text-28 text-white mb-5 md:mb-10">Kontakty</h3>
                <p class="text-white leading-6">PURE VISION s.r.o.<br>
                    Korunní 1295/55<br>
                    120 00 Praha 2-Vinohrady</p>
                <p class="text-white leading-6 mt-12">IČ: 06437125<br>
                    Otevřeno Po-Pá 10 - 17 hod. <br></p>
                <a href="/prodejna" class="flex items-center text-primary font-bold mt-6 hover:text-white">
                    <span>Naše prodejna</span>
                    {{ svg('up-arrow', { class: 'w-3 h-3 rotate-90 fill-current ml-2' }) }}
                </a>
            </div>
        </div>
        <div class="flex mt-11 flex-wrap md:flex-nowrap">
            <a href="tel:+420704926926" class="flex items-center mb-5 sm:mr-12 sm:mb-0">
                {{ svg('phone-call', { class: 'h-7 w-8 fill-primary mr-5' }) }}  
                <span class="text-20 text-white hover:underline">+420 704 926 926</span>
            </a>
            <a href="mailto:info@dostupnyiphone.cz" class="flex items-center">
                {{ svg('email', { class: 'h-7 w-8 fill-primary mr-5' }) }}  
                <span class="text-20 text-white hover:underline">info@dostupnyiphone.cz</span>
            </a>
        </div>
    </div>
    <div class="container py-10 border-y border-white border-opacity-30">
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-[35%_25%_40%]">
            <div class="mb-5 md:mb-0">
                <span class="block text-white font-bold mb-2">Doprava</span>
                <picture class="mr-5 inline-block">
                    <source srcset="{{ asset('images/zasilkovna.png')|resize(400)|towebp }}" type="image/webp">
                    <source srcset="{{ asset('images/zasilkovna.png')|resize(400) }}" type="image/png">
                    <img src="{{ asset('images/zasilkovna.png')|resize(400) }}" alt="Logo firmy Zásilkovna.cz" loading="lazy" class="rounded-full !h-11">
                </picture>
                <picture class="inline-block">
                    <source srcset="{{ asset('images/osobni_odber.png')|resize(400)|towebp }}" type="image/webp">
                    <source srcset="{{ asset('images/osobni_odber.png')|resize(400) }}" type="image/png">
                    <img src="{{ asset('images/osobni_odber.png')|resize(400) }}" alt="Logo firmy Zásilkovna.cz" loading="lazy" class="rounded-full !h-11">
                </picture>
            </div>
            <div class="lg:col-start-3">
                <span class="block text-white font-bold mb-2">Platba</span>
                <div class="flex flex-wrap justify-between md:flex-nowrap">
                    {% for item in options.payment %}
                    <picture class="flex items-center mb-3 md:mb-0">
                        <source srcset="{{ item.icon.url|towebp }}" type="image/webp">
                        <source srcset="{{ item.icon.url|tojpg }}" type="image/jpeg">
                        <img src="{{ item.icon.url|tojpg }}" alt="{{ slide.alt }}" loading="lazy" class="object-contain">
                    </picture>                    
                    {% endfor %}
                </div>
                <div class="flex items-center mt-3">
                    {{ svg('credit-card', { class: 'w-6 h-6 fill-primary mr-2' }) }}
                    <span class="font-bold text-primary">U nás platíte bezpečně</span>
                </div>
            </div>
        </div>
    </div>
    <div class="container py-5 md:py-10">
        <div class="flex justify-between">
            <span class="text-white text-12 md:text-16">
                Copyright 2021 © DostupnyiPhone.cz  |  Zánovní a použité Apple iPhone produkty za dostupnější ceny 
            </span>
        </div>
    </div>
</footer>
{% endblock %}